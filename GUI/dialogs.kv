#:kivy 1.11

<FullScalerRangeDialog>:
    auto_dismiss: False
    size_hint: 0.4, 0.4
    pos_hint: {'top': 0.5, 'right':0.5}
    title: 'FSR Selection'
    fsr_select_spinner: _spinner
    GridLayout:
        cols: 2
        spacing: 10
        padding: 20
        Label: 
            text: 'Wave'
        Spinner:
            id: _spinner
            text: '+/-2g'
            values: ['+/-2g','+/-4g','+/-8g','+/-16g']
        Widget:
        Widget:
        Button:
            text: 'Cancel'
            on_release: root.dismiss()
        Button:
            text: 'Update'
            on_release: root.update_pressed()

<SampleRateDialog>:
    auto_dismiss: False
    size_hint: 0.4, 0.4
    pos_hint: {'top': 0.5, 'right':0.5}
    title: 'Sample Rate Selection'
    sample_rate_spinner: _sample_rate_spinner
    GridLayout:
        cols: 2
        spacing: 10
        padding: 20
        Label: 
            text: 'Sample Rate'
        Spinner:
            values: ['1 Hz','10 Hz', '25 Hz', '50 Hz', '100 Hz', '200 Hz', '400 Hz', '1344 Hz'] 
            id: _sample_rate_spinner
        Button:
            text: 'Cancel'
            on_release: root.dismiss()
        Button:
            text: 'Update'
            on_release: root.update_pressed()